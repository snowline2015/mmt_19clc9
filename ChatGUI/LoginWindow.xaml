                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding Source={x:Static SystemParameters.HighContrast}}" Value="false">
                                <Setter Property="Foreground" TargetName="PART_TextBox" Value="{Binding Foreground, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="Assets/background3.jpg"/>
    </Window.Background>
    <StackPanel x:Name="Login_Panel" HorizontalAlignment="Left" Height="667" Margin="184.5,19,0,0" VerticalAlignment="Top" Width="561.6">
        <StackPanel.Background>
            <LinearGradientBrush EndPoint="0.551,0.994" StartPoint="0.486,-0.226">
                <GradientStop Color="Black" Offset="0.032"/>
                <GradientStop Color="#FF5581E7" Offset="0.368"/>
                <GradientStop Color="#FF74A7D6" Offset="1"/>
            </LinearGradientBrush>
        </StackPanel.Background>
        <Grid x:Name="LoginGrid" Height="667.6">
            <TextBlock x:Name="txt_Welcome" HorizontalAlignment="Left" Height="40.8" Margin="56.4,95.6,0,0" TextWrapping="Wrap" Text="Welcome To Chat App" VerticalAlignment="Top" Width="453.6" FontSize="26" TextAlignment="Center" Foreground="Black"/>
            <TextBox x:Name="Username" HorizontalAlignment="Left" Height="43" Margin="56.4,237.501,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="453.6" Background="#FFBCD2ED" BorderBrush="{x:Null}" BorderThickness="1.5" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}" 
                VerticalContentAlignment="Center" FontSize="18" Text="Username" GotFocus="RemoveText" Style="{DynamicResource UsrName_Login}" Padding="5,0,0,0" Visibility="Collapsed"/>
            <PasswordBox x:Name="Password" HorizontalAlignment="Left" Height="43" Margin="56.4,342.225,0,0" VerticalAlignment="Top" Width="453.6" SelectionBrush="{x:Null}" Background="#FFBCD2ED" 
                VerticalContentAlignment="Center" FontSize="18" SelectionTextBrush="{x:Null}" BorderBrush="{x:Null}" BorderThickness="1.5" Password="Password" GotFocus="RemoveTextPassword" Style="{DynamicResource Pass_Login}" Padding="5,0,0,0" Visibility="Collapsed"/>
            <Button x:Name="LoginButton" HorizontalAlignment="Left" Height="38.4" Margin="194.4,443.7,0,0" VerticalAlignment="Top" Width="177.6" FontSize="18" Style="{StaticResource MyNextButton}" Click="LoginButton_Click" Visibility="Collapsed">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/next2.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>

            <Button x:Name="ExitButton" Style="{StaticResource MyButton}" HorizontalAlignment="Left" Height="30" Margin="507.8,10,0,0" VerticalAlignment="Top" Width="30" FontWeight="Bold" FontSize="16" Foreground="#FF121111" BorderBrush="{x:Null}" 
                Click="CloseButton_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/close2.png" Stretch="Uniform"/>
